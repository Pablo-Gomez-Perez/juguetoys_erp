﻿@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/site.css" rel="stylesheet" />

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item text-black active" aria-current="page">Clientes</li>
    </ol>
</nav>

<div class="container-fluid">
    <form class="mt-2" asp-action="Index" asp-controller="PCliente"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-loading="#spinner"
          data-ajax-mode="replace"
          data-ajax-update="#ajaxresult">

        <div class="row mb-2">
            <div class="col-md-4">
                <a id="create" class="btn btn-sm btn-dark" onclick="modalLoad('create')" data-url="@Url.Content("~/PCliente/Create")" data-title="Alta Cliente" data-toggle="tooltip" data-placement="top" title="Alta Cliente">
                <i class="fa fa-add"></i> Agregar
                </a>
            </div>
            <div class="row col-md-6 text-center">
                <div class="col-md-9">
                    <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Nombre" />
                </div>
                <div class="col-md-3 text-left">
                    <button type="submit" class="btn btn-primary text-white">
                    <i class="fa fa-search"></i> Buscar
                </button>
                </div>
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-sm btn-warning">
                    Registros <span class="badge bg-secondary">@ViewBag.TotalRows</span>
                </button>
            </div>
        </div>
        <div class="row">
            <span id="spinner" style="display:none;" class="text-center"><i class="fa fa-spinner fa-spin"></i></span>
        </div>
    </form>
    <div id="ajaxresult">
        @await Html.PartialAsync("_ListClientes")
    </div>
</div>
@await Html.PartialAsync("_Modal")
@section Scripts  {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}